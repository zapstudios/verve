{
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ES2021"],
        "jsx": "react",
        "module": "NodeNext",
        "target": "ES2021",
        "sourceMap": true,
        "declaration": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noEmit": false
    },
    "exclude": ["node_modules", "dist", "build", ".turbo"]
}
